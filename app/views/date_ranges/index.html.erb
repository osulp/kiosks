<p id="notice"><%= notice %></p>

<h1>Date Ranges</h1>

<table>
  <thead>
    <tr>
      <th>Start date</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @date_ranges.each do |date_range| %>
      <tr>
        <td><%= date_range.start_date %></td>
        <td><%= date_range.end_date %></td>
        <td><%= link_to 'Show', date_range %></td>
        <td><%= link_to 'Edit', edit_date_range_path(date_range) %></td>
        <td><%= link_to 'Destroy', date_range, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

