<p id="notice"><%= notice %></p>

<h1>Collections</h1>

<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">All collections</h3>
  </div>
  <div class="panel-body">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Slides</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @collections.each do |collection| %>
          <% if collection.name != "generic" %>
            <tr>
              <td><%= link_to collection.name, collection %></td>
              <td>
                <%= collection.slides.count.to_s %>
              </td>
              <td><%= link_to 'Edit', edit_collection_path(collection) %></td>
              <td><%= link_to 'Destroy', collection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

<%= link_to 'New Collection', new_collection_path, class: "btn btn-primary" %>
<%= link_to 'Admin Panel', rails_admin_path, class: "btn btn-default" %>

