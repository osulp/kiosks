<div class="page-header">
  <h1>Kiosks</h1>
</div>

<div class="row">

  <div class="col-md-12">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @kiosks.each do |kiosk| %>
          <tr>
            <td><%= kiosk.name %></td>
            <td><%= link_to 'Show', kiosk_show_path(id: kiosk.name) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>

    <% unless current_user %>
      <%= render 'login_form' %>
    <% end %>
  </div>
</div>
